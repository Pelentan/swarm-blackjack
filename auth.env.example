# Auth Service Configuration
# Copy to auth.env and fill in values
# auth.env is gitignored — never commit real credentials

# WebAuthn / Passkey configuration
# RP_ID must match the domain the browser sees (no port for standard ports)
# ORIGIN must exactly match browser address bar — protocol, host, port
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Swarm Blackjack
WEBAUTHN_ORIGIN=http://localhost:8021

# Auth database — only auth-service has these credentials
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_NAME=authdb
AUTH_DB_USER=authuser
AUTH_DB_PASSWORD=change-me-in-production
